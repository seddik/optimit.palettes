<Window x:Class="OptimIT.Palettes.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OptimIT.Palettes.Demo"
        xmlns:op="clr-namespace:OptimIT.Palettes;assembly=OptimIT.Palettes"
        mc:Ignorable="d"
        Title="OptimIT.Palettes" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        
        <TabControl>
            <TabItem Header="FlatUI">
                <local:PaletteUI  ColorClass="{x:Type op:FlatUI}" TextSource="https://flatuicolors.com/palette/defo"/>
            </TabItem>
            <TabItem Header="American Palette">
                <local:PaletteUI  ColorClass="{x:Type op:USPalette}" TextSource="https://flatuicolors.com/palette/us"/>
            </TabItem>
            <TabItem Header="British Palette">
                <local:PaletteUI  ColorClass="{x:Type op:GBPalette}" TextSource="https://flatuicolors.com/palette/gb"/>
            </TabItem>
            <TabItem Header="Aussie Palette">
                <local:PaletteUI  ColorClass="{x:Type op:AUPalette}" TextSource="https://flatuicolors.com/palette/au"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
